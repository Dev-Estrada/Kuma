{
  "name": "inventory-system",
  "version": "1.0.0",
  "description": "Simple inventory system for a warehouse.",
  "main": "electron-main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build:frontend": "tsc -p public && sass public/scss/styles.scss public/css/styles.css --no-source-map",
    "migrate:sales": "node scripts/migrate-sales.js",
    "create-demo-db": "node scripts/create-demo-db.js",
    "prepare": "npm run build",
    "electron": "electron .",
    "dist": "npm run build && electron-builder --win",
    "dist:vs": "scripts\\dist-with-vs-env.cmd",
    "obfuscate": "node scripts/obfuscate.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.1.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.4"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "javascript-obfuscator": "^4.1.1",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/sqlite3": "^3.1.11",
    "sass": "^1.63.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "build": {
    "appId": "com.kuma.inventory",
    "productName": "KUMA",
    "directories": { "output": "release" },
    "files": ["electron-main.js", "dist/**/*", "public/**/*", "node_modules/**/*", "demoBD.db"],
    "asarUnpack": ["**/node_modules/sqlite3/**"],
    "npmRebuild": false,
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "icon": "public/assets/icon.ico"
    }
  }
}
