{
  "name": "inventory-system",
  "version": "1.0.0",
  "description": "Simple inventory system for a warehouse.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build:frontend": "tsc -p public && sass public/scss/styles.scss public/css/styles.css --no-source-map",
    "migrate:sales": "node scripts/migrate-sales.js",
    "create-demo-db": "node scripts/create-demo-db.js",
    "prepare": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.1.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/sqlite3": "^3.1.11",
    "sass": "^1.63.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
